<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_space"
    tools:context="co.example.hment.myapplication.Fragments.Stats">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/stats_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </com.github.mikephil.charting.charts.PieChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/stats_outcome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stats_outcome_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/outcome_label"
                android:textSize="@dimen/label_text_size"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/stats_outcome_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:text="0"
                android:textSize="40sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stats_income"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stats_intcome_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/income_label"
                android:textAlignment="center"
                android:textSize="@dimen/label_text_size"/>

            <TextView
                android:id="@+id/stats_intcome_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:text="0"
                android:textSize="40sp"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>